{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      // This paths synchronizd with webpack shared config
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "node_modules/@types"],
  "exclude": ["src/**/*.test*"]
}
